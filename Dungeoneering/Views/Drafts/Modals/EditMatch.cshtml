
@model Merwer.Chronicle.Dungeoneering.Tracker.Models.Match

<div id="edit-match" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <form method="post" action="@Url.Action("Match", "Drafts")">
                <input type="hidden" name="draftId" />
                <input type="hidden" name="matchId" />
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Match</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.OpponentArchetype)
                        @Html.EnumDropDownListFor(m => m.OpponentArchetype)
                    </div>
                    <div class="checkbox">
                        <label>
                            @Html.EditorFor(m => m.First)
                            @Html.DisplayNameFor(m => m.First)
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            @Html.EditorFor(m => m.Win)
                            @Html.DisplayNameFor(m => m.Win)
                        </label>
                    </div>
                    <fieldset class="match-rewards">
                        <legend>Rewards</legend>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Rewards.Copper)
                            @Html.EditorFor(m => m.Rewards.Copper)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Rewards.Shards)
                            @Html.EditorFor(m => m.Rewards.Shards)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Rewards.Packs)
                            @Html.EditorFor(m => m.Rewards.Packs)
                        </div>
                    </fieldset>
                </div>
                <div class="modal-footer">
                    <button type="button" role="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" role="button" class="btn btn-info">Record</button>
                </div>
            </form>
        </div>
    </div>
</div>