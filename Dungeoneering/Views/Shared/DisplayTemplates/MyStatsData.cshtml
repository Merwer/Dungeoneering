@using Merwer.Chronicle.Dungeoneering.Tracker.Models;
@model MyStatsData

<div class="row">
    <div class="col-xs-3">
        @Html.LabelFor(m => m.WinRate)
        @Html.DisplayFor(m => m.WinRate)

        @Html.LabelFor(m => m.Drafts)
        @Html.DisplayFor(m => m.Drafts)
    </div>

    <div class="col-xs-3">
        @Html.LabelFor(m => m.AverageWins)
        @Html.DisplayFor(m => m.AverageWins)

        @Html.LabelFor(m => m.Games)
        @Html.DisplayFor(m => m.Games)
    </div>

    <div class="col-xs-3">
        @Html.LabelFor(m => m.TotalWins)
        @Html.DisplayFor(m => m.TotalWins)

        @Html.LabelFor(m => m.TotalLosses)
        @Html.DisplayFor(m => m.TotalLosses)
    </div>

    <div class="col-xs-3">
        @Html.LabelFor(m => m.FirstWinRate)
        @Html.DisplayFor(m => m.FirstWinRate)

        @Html.LabelFor(m => m.SecondWinRate)
        @Html.DisplayFor(m => m.SecondWinRate)
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @Html.LabelFor(m => m.AverageRewards)
        @Html.DisplayFor(m => m.AverageRewards)

        @Html.LabelFor(m => m.TotalRewards)
        @Html.DisplayFor(m => m.TotalRewards)
    </div>
</div>

<div class="row">
    <h2>Stats as:</h2>
    <table class="table table-striped">
        <thead>
            @Html.Partial("DisplayTemplates/LegendSpecificStatsData", (LegendSpecificStatsData)null, new ViewDataDictionary())
            @*@Html.DisplayFor(m => m.RaptorStats, new { head = true })*@
        </thead>
        <tbody>
            @Html.DisplayFor(m => m.RaptorStats)
            @Html.DisplayFor(m => m.ArianeStats)
            @Html.DisplayFor(m => m.LinzaStats)
            @Html.DisplayFor(m => m.OzanStats)
            @Html.DisplayFor(m => m.VanesculaStats)
        </tbody>
    </table>
</div>
