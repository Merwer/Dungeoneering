@using Merwer.Chronicle.Dungeoneering.Tracker.Models;

@section scripts {
    @Scripts.Render("/Content/js/tierlist.js")
}

@{
    ViewBag.Title = "TierList";
}

<h2>TierList</h2>

<ul class="nav nav-tabs" data-tabs="tabs">
    @foreach (var archetype in Enum.GetValues(typeof(Archetype)))
    {
        <li role="presentation">
            <a role="tab" href="#@archetype.ToString().ToLower()" data-toggle="tab" class="archetype-tab" data-archetype="@archetype">
                @Html.Partial("_LegendIcon", archetype)
            </a>
        </li>
    }
</ul>

<div class="tab-content">
    @foreach (var archetype in Enum.GetValues(typeof(Archetype)))
    {
        <div id="@archetype.ToString().ToLower()" role="tabpanel" class="tab-pane">
            <ul class="nav nav-pills" data-pills="pills">
                <li role="presentation" class="active">
                    <a role="tab" href="#saphire-@archetype" data-toggle="pill">Saphire</a>
                </li>
                <li role="presentation">
                    <a role="tab" href="#emerald-@archetype" data-toggle="pill">Emerald</a>
                </li>
                <li role="presentation">
                    <a role="tab" href="#ruby-@archetype" data-toggle="pill">Ruby</a>
                </li>
                <li role="presentation">
                    <a role="tab" href="#diamond-@archetype" data-toggle="pill">Diamond</a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="saphire-@archetype" role="tabpanel" class="tab-pane active saphire-content">
                    <div class="table-responsive">
                        <table class="table table-responsive">
                            <thead>
                                <tr>
                                    <th>Insta-pick</th>
                                    <th>God Tier</th>
                                    <th>Excellent</th>
                                    <th>Good</th>
                                    <th>Above Average</th>
                                    <th>Average</th>
                                    <th>Below Average</th>
                                    <th>Bad</th>
                                    <th>Terrible</th>
                                    <th>Brick</th>
                                    <th>Undecided</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div id="emerald-@archetype" role="tabpanel" class="tab-pane emerald-content">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Insta-pick</th>
                                    <th>God Tier</th>
                                    <th>Excellent</th>
                                    <th>Good</th>
                                    <th>Above Average</th>
                                    <th>Average</th>
                                    <th>Below Average</th>
                                    <th>Bad</th>
                                    <th>Terrible</th>
                                    <th>Brick</th>
                                    <th>Undecided</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div id="ruby-@archetype" role="tabpanel" class="tab-pane ruby-content">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Insta-pick</th>
                                    <th>God Tier</th>
                                    <th>Excellent</th>
                                    <th>Good</th>
                                    <th>Above Average</th>
                                    <th>Average</th>
                                    <th>Below Average</th>
                                    <th>Bad</th>
                                    <th>Terrible</th>
                                    <th>Brick</th>
                                    <th>Undecided</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div id="diamond-@archetype" role="tabpanel" class="tab-pane diamond-content">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
