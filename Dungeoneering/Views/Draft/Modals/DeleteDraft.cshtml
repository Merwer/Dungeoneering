
<div id="delete-draft" class="modal fade action-sub" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            @using (Html.BeginForm("Delete", "Draft", new { id = -1 }, FormMethod.Post, null))
            {
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete confirmation</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you wish to delete this deck?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" role="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" role="button" class="btn btn-danger">Delete</button>
                </div>
            }
        </div>
    </div>
</div>
