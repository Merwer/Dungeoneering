
<div id="abandon-draft" class="modal fade action-sub" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            @using (Html.BeginForm("Abandon", "Draft", new { id = -1 }, FormMethod.Post, new { @class = "submitModal" }))
            {
                @Html.HttpMethodOverride(HttpVerbs.Patch)
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Abandon confirmation</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you wish to abandon this deck?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" role="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" role="button" class="btn btn-danger">Abandon</button>
                </div>
            }
        </div>
    </div>
</div>
