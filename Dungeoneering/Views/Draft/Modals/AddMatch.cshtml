
@model Merwer.Chronicle.Dungeoneering.Tracker.Models.Match

<div id="add-match" class="modal fade action-sub" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            @*Using negative numbers as placeholders for JS URL replacement*@
            @using (Html.BeginForm("Create", "DraftMatch", new { draftId = -1 }, FormMethod.Post, null))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Record Match</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.OpponentArchetype)
                        @Html.EnumDropDownListFor(m => m.OpponentArchetype)
                    </div>
                    <div class="checkbox">
                        <label>
                            @Html.EditorFor(m => m.First)
                            @Html.DisplayNameFor(m => m.First)
                        </label>
                    </div>
                    <div class="checkbox">
                        <label data-toggle="collapse" data-target=".match-rewards">
                            @Html.EditorFor(m => m.Win)
                            @Html.DisplayNameFor(m => m.Win)
                        </label>
                    </div>
                    <fieldset class="match-rewards collapse in">
                        <legend>Rewards</legend>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Rewards.Copper)
                            @Html.EditorFor(m => m.Rewards.Copper)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Rewards.Shards)
                            @Html.EditorFor(m => m.Rewards.Shards)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Rewards.Packs)
                            @Html.EditorFor(m => m.Rewards.Packs)
                        </div>
                    </fieldset>
                </div>
                <div class="modal-footer">
                    <button type="button" role="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" role="button" class="btn btn-info">Record</button>
                </div>
            }
        </div>
    </div>
</div>